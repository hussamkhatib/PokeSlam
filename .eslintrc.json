{
  "env": {
      "browser": true,
      "es6": true
  },
  "extends": [
      "plugin:react/recommended",
      "airbnb"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "only-warn",
      "react",
      "@typescript-eslint"
  ],
  "rules": {
      "indent": [
          "error",
          4
      ],
      "react/jsx-indent-props": [
          "error",
          4
      ],
      "react/jsx-indent": [
          "error",
          4
      ],
      "react/jsx-filename-extension": [
          1,
          {
              "extensions": [
                  ".tsx",
                  ".jsx"
              ]
          }
      ],
      "jsx-a11y/click-events-have-key-events": 0,
      "no-use-before-define": 0,
      "import/extensions": 0,
      "no-shadow": 0,
      "@typescript-eslint/no-shadow": [
          "error"
      ],
      "no-unused-vars": 0,
      "@typescript-eslint/no-unused-vars": [
          "error"
      ]
  },
  "overrides": [
      {
          "files": [
              "*.d.ts"
          ],
          "rules": {
              "no-unused-vars": 0
          }
      },
      {
          "files": [
              "*.test.tsx"
          ],
          "rules": {
              "no-undef": 0
          }
      }
  ],
  "settings": {
      "import/resolver": {
          "node": {
              "extensions": [
                  ".js",
                  ".jsx",
                  ".ts",
                  ".tsx"
              ]
          }
      }
  }
}